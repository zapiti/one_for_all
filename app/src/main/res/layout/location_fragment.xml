<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/infoLegendWeb"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        >


        <RelativeLayout

            android:id="@+id/legend"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/white"
            android:paddingStart="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/web_view_frame1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"

               android:src="@drawable/ic_danger_moral"

                />

            <ImageView
                android:id="@+id/web_view_frame2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/web_view_frame1"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_danger_trabalho" />

            <ImageView
                android:id="@+id/web_view_frame3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/web_view_frame2"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_danger_sexual" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/textView2">

                <ImageView
                    android:id="@+id/web_view_frame4"


                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"

                    android:src="@drawable/ic_danger_other"

                    />



                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5dp"

                    android:layout_toEndOf="@+id/web_view_frame4"
                    android:text="Outros tipos de Assédio"
                    android:textSize="14sp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/web_view_frame1"
                android:text="Assédio Moral"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/web_view_frame1"
                android:layout_margin="5dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/web_view_frame2"

                android:text="Assédio Trabalhista"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/web_view_frame2"
                android:layout_margin="5dp"

                android:layout_toEndOf="@+id/web_view_frame3"
                android:text="Assedio Sexual"
                android:textSize="14sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/infoButtonLegendy"
        android:elevation="15dp"
        android:layout_alignEnd="@id/mapView"
        android:background="@color/colorPrimaryDark"

        android:src="@drawable/ic_infoinfo"

        android:layout_below="@+id/infoLegendWeb"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />

</RelativeLayout>