<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >




    <RelativeLayout
        android:id="@+id/contant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="5dp"
       android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/bemvindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem Vindo"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/apresentacao_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/bemvindo"
            android:text="@string/text_apresentaÃ§ao_menu"/>
        <Button
            android:id="@+id/goToMainIntro"
            android:shadowRadius="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/primaryTextColor"
            android:layout_below="@+id/apresentacao_text"
            android:text="Clique aqui para entrar"/>


    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/tituloMap"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/transparent"
          android:layout_below="@+id/contant"
        android:elevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

          >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Mapa de insidencia"
                android:layout_gravity="center"

                />
        </LinearLayout>
        <RelativeLayout
            android:paddingStart="10dp"
            android:id="@+id/legend"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="30dp"
            >

            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/web_view_frame1"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_alignParentTop="true"

                app:cardBackgroundColor="#1a237e"

                />

            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/web_view_frame2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:cardBackgroundColor="#e65100"
                android:layout_below="@+id/web_view_frame1" />

            <android.support.v7.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/web_view_frame3"
                android:layout_width="25dp"
                android:layout_height="25dp"

                app:cardBackgroundColor="#7f0000"
                android:layout_below="@+id/web_view_frame2" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/textView2">
                <android.support.v7.widget.CardView
                    app:cardCornerRadius="10dp"


                    android:layout_margin="5dp"
                    android:id="@+id/web_view_frame4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    app:cardBackgroundColor="#6a1b9a"
                    android:layout_alignParentTop="true"

                    />
                <android.support.v7.widget.CardView
                    app:cardCornerRadius="10dp"

                    android:id="@+id/web_view_frame5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#003300"
                    android:layout_below="@+id/web_view_frame4"

                    />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/assSexual"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/web_view_frame4" />

                <TextView
                    android:id="@+id/textView5"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/outros_tipos_de_abuso"
                    android:textStyle="bold"
                    android:layout_below="@+id/web_view_frame4"
                    android:layout_toEndOf="@+id/web_view_frame5" />
            </RelativeLayout>






            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_margin="5dp"
                android:text="@string/assMoral"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/web_view_frame1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_margin="5dp"
                android:text="@string/assTrab"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@+id/web_view_frame1"
                android:layout_toEndOf="@+id/web_view_frame2"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/assEscolar"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@+id/web_view_frame2"
                android:layout_toEndOf="@+id/web_view_frame3" />




        </RelativeLayout>
    </android.support.v7.widget.CardView>







    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contant">


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </android.support.v7.widget.CardView>
</RelativeLayout>