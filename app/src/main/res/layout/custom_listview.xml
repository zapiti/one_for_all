<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contact_view"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:maxWidth="240dp"
        android:layout_toEndOf="@+id/contactBadge"
        android:layout_toRightOf="@+id/contactBadge"
        android:text="contact"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/phone_number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_alignBottom="@+id/contactBadge"
        android:layout_alignLeft="@+id/contact_view"
        android:layout_alignStart="@+id/contact_view"
        android:text="phone number"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="50dp" />

    <ImageView
        android:id="@+id/contactBadge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/contact_view"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        app:srcCompat="@mipmap/smartphone_icon" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone_number_view"
        android:layout_alignStart="@+id/phone_number_view"
        android:layout_below="@+id/phone_number_view"
        android:layout_margin="5dp"
        android:id="@+id/space2" />

    <ImageButton
        android:id="@+id/trashButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="24dp"
        android:background="@mipmap/white_trash_icon"
        android:layout_marginRight="27dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>