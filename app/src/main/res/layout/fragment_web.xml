<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:tag="webview"
   >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="15dp"
   >


    <RelativeLayout
        android:paddingStart="10dp"
        android:id="@+id/legend"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
       >

        <android.support.v7.widget.CardView
               app:cardCornerRadius="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/web_view_frame1"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_alignParentTop="true"

            app:cardBackgroundColor="@color/noticiaChart"

         />

        <android.support.v7.widget.CardView
               app:cardCornerRadius="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/web_view_frame2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:cardBackgroundColor="@color/entreterimentoChart"
           android:layout_below="@+id/web_view_frame1" />

        <android.support.v7.widget.CardView
               app:cardCornerRadius="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/web_view_frame3"
            android:layout_width="25dp"
            android:layout_height="25dp"

            app:cardBackgroundColor="@color/saudeChart"
           android:layout_below="@+id/web_view_frame2" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_toEndOf="@+id/textView2">
    <android.support.v7.widget.CardView
               app:cardCornerRadius="10dp"


            android:layout_margin="5dp"
        android:id="@+id/web_view_frame4"
        android:layout_width="25dp"
        android:layout_height="25dp"

        app:cardBackgroundColor="@color/ongsChart"
        android:layout_alignParentTop="true"

        />
    <android.support.v7.widget.CardView
               app:cardCornerRadius="10dp"

        android:id="@+id/web_view_frame5"
        android:layout_width="25dp"
        android:layout_height="25dp"

            android:layout_margin="5dp"
        app:cardBackgroundColor="@color/ajudaChart"
        android:layout_below="@+id/web_view_frame4"
     
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_margin="5dp"
        android:text="ONGs"

        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/web_view_frame4" />

    <TextView
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_margin="5dp"
        android:text="Ajuda"
        android:layout_below="@+id/web_view_frame4"
        android:layout_toEndOf="@+id/web_view_frame5" />
</RelativeLayout>

       

    


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
                android:layout_margin="5dp"
            android:text="Noticia"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/web_view_frame1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
                android:layout_margin="5dp"
            android:text="Entreterimento"
            android:textSize="18sp"
            android:layout_below="@+id/web_view_frame1"
            android:layout_toEndOf="@+id/web_view_frame2"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_margin="5dp"
            android:text="Saude"

            android:textSize="18sp"
            android:layout_below="@+id/web_view_frame2"
            android:layout_toEndOf="@+id/web_view_frame3" />

      


    </RelativeLayout>
</android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/url_list_view"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>